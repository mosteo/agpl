with "agpl";

project Agpl.Test is

   package Ide is
      for Vcs_Kind use "Subversion";
   end Ide;

   for Source_Dirs use ("tests");
   for Object_Dir use "obj";

   package Builder is
      for Default_Switches ("ada") use ("-j2", "-g");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use 
         ("-O2", "-gnatn", "-gnatQ", "-gnatf", "-gnato", "-fstack-check", 
          "-g", "-s", "-gnata", "-gnat05", "-gnatwc", "-gnatwf", "-gnatwj", 
          "-gnatwk", "-gnatwm", "-gnatwo", "-gnatwp", "-gnatwr", "-gnatwu", "-gnatwv", 
          "-gnatwz", "-gnatya", "-gnatyc", "-gnatye", "-gnatyh", "-gnatyi", "-gnatyk");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Default_Switches ("ada") use ("-g", "-Wl,--gc-sections");
   end Linker;

end Agpl.Test;

